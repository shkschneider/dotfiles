#!/usr/bin/env bash

# https://unix.stackexchange.com/questions/4681/how-do-you-sort-du-output-by-size/4691#4691
num() {
    echo $@ | awk '
        function human(x) {
            if (x < 1000) {
                return x
            } else {
                x /= 1024
            }
            s="kMGTEPZY";
            while (x >= 1000 && length(s) > 1) {
                x /= 1024;
                s = substr(s, 2)
            }
            return int(x + 0.5) substr(s, 1, 1)
        }
        {
            sub(/^[0-9]+/, human($1))
            print
        }
    '
}

test $# -eq 0 && set -- $(cat /dev/stdin)
test $# -gt 0 && num $@

# EOF
