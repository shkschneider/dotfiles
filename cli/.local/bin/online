#!/usr/bin/env bash

# https://github.com/gpakosz/.tmux/blob/master/.tmux.conf.local
ping -c 1 1.1.1.1 >/dev/null 2>&1 && {
    echo true
    exit 0
} || {
    echo false
    exit 1
}

# https://stackoverflow.com/a/26820300
command -v nc >/dev/null || exit 255
echo -e "GET / HTTP/1.0\n\n" | nc 1.1.1.1 80 &>/dev/null
exit $?

# EOF
