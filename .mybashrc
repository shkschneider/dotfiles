# ~/.mybashrc

# Exports

export JAVA_HOME=/usr/java/jdk1.7.0_40
export PATH=$PATH:$JAVA_HOME/bin

export ANDROID_HOME=/opt/android-sdk
export PATH=$PATH:$ANDROID_HOME/tools:$ANDROID_HOME/platform-tools

# Aliases

alias ls='ls --color=auto -Fh --group-directories-first'
alias ne='emacs -nw'
alias j='jobs'
alias h='history'
alias cp='cp -vr'
alias mkdir='mkdir -pv'
alias scp='scp -r'
alias wget="wget --no-check-certificate"
alias curl="curl --silent --insecure"
alias grep="grep --color"
alias bc="bc -q"
alias rm='rm -v'
alias ..="cd .."
alias valgrind='valgrind --leak-check=full --show-reachable=yes'

# Functions

function calc() {
    if [ $# -eq 1 ] ; then
        echo "$1" | bc -l | sed -r 's#0+$##';
    else
        return 1
    fi
}

function psx() {
    if [ $# -eq 1 ] ; then
        ps -aux | grep --color -- "$1" | grep -v 'grep' #| pr -TW$COLUMNS
    else
        return 1
    fi
}

function mcd () {
    if [ $# -eq 1 ] ; then
        mkdir "$@" && cd "${!#}"
    else
        return 1
    fi
}

function ip() {
    curl --silent ifconfig.me/ip
}

function ports() {
    netstat -nape --inet 2>/dev/null | egrep '[0-9]+:[0-9]+'
}

# EOF
