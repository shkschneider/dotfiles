# ~/.mybashrc

# Exports

export LANG=en_US.UTF-8

# Aliases

alias ls='ls --color=auto -Fh --group-directories-first'
alias ll='ls -l'
alias ne='emacs -nw'
alias na='nano -u'
alias j='jobs'
alias h='history'
alias cp='cp -vr'
alias mkdir='mkdir -pv'
alias scp='scp -r'
alias wget="wget --quiet --no-check-certificate"
alias curl="curl --silent --insecure"
alias grep="grep --no-messages --color"
alias egrep="egrep --no-messages --color"
alias bc="bc -q"
alias rm='rm -v'
alias ..="cd .."


# EOF
