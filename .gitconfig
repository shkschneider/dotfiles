# ~/.gitconfig

[core]
	excludesfiles = ~/.gitignore
	attributesfile = ~/.gitattributes
	#pager = most
	#editor = nano

[user]
	#name = User Name
	#email = useremail
	#signkey = signkey

[alias]
	s = show
	l = log --tags --graph --color --pretty=format:"%C(yellow)%H%C(green)%d%C(reset)%n%x20%cd%n%x20%cn%x20(%ce)%n%x20%s%n"
        a = add -u
        t = "!git show-ref --tags | awk '{split($2,t,\"/\"); print t[3],substr($1,1,7)}' | sort -rV | awk '{print $2,$1}'"

	ls = "!git l --stat"
        lg = log --decorate --graph --oneline
        lga = "!git lg --all"

	ci = commit --no-status
	ca = "!git ci --all"
	ar = "!git add -u && git ls-files --deleted -z | xargs -0 git rm 2>/dev/null"
        reci = commit --amend
        cp = cherry-pick

	co = checkout
	br = branch
	rc = rebase --continue
	rs = rebase --skip
	ra = rebase --abort

	st = status --short --branch
	sm = submodule
	sf = show --name-status

	df = diff --patch-with-stat
	dc = "!git df --cached"
	ds = diff --stat
	dfw = diff --word-diff
	dcw = "!git dfw --cached"

	cl = clean -df
	authors = "!git log --format='%aN <%cE>' | sort -u"
        rank = "!git shortlog -s -n | awk '{print $1,$2}'"

	re = reset --hard HEAD
	unadd = reset --mixed
	uncommit = reset --soft HEAD^
	unpull = reset --hard HEAD@{0}
	unmerge = reset --hard HEAD@{0}
	unrebase = reset --hard HEAD@{0}

	tgz = "!git archive HEAD --prefix=`git rev-parse --short HEAD` --format=tar | gzip > ../`git rev-parse --short HEAD`.tar.gz"
	# curl https://raw.githubusercontent.com/davidfokkema/git-rewrite-author/master/git-rewrite-author | python - -w "Old <>" "New <>"

[apply]
	whitespace = fix

[color]
	ui = auto

[merge]
	log = true

[pull]
	default = upstream

[push]
	default = tracking

[branch "master"]
	remote = origin
	merge = refs/heads/master
        rebase = true
        autosetuprebase = always

[branch "dev"]
	remote = origin
	merge = refs/heads/dev
        rebase = true
        autosetuprebase = always

[advice]
	pushNonFastForward = false
	statusHints = false

[credential]
	helper = cache --timeout=43200 # 12h

[i18n]
        commitEncoding = utf8
        logOutputEncoding = utf8

# EOF
