#!/bin/sh

command -v "rsync" >/dev/null 2>&1 || { echo "E: rsync: command not found" >&2 ; exit 1 ; }

rsync \
    --exclude ".git" \
    --exclude "dotfiles" \
    --exclude "LICENSE*" \
    --exclude "README*" \
    -Wav --human-readable --progress "." "$HOME" # --dry-run

if [ $(id -u) -eq 0 ] ; then
    cp bash.bashrc /etc/
fi

# EOF
